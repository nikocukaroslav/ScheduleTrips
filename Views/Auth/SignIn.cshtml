<style>

    body {
        overflow: hidden;
        display: flex;
        height: 100vh;
        justify-content: center;
        align-items: center;
    }

    .container {
        width: 60rem;
        padding: 1.6rem;
        margin: 0 auto;
        color: #e3fafc;
        background-color: #333;
        padding: 2.4rem;
        border-radius: 6px;
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 1.5rem;
        margin: 0.5rem 0 2.2rem 0;
        display: inline-block;
        border: none;
        background: #e3fafc;
        color: #333;
    }

        input[type=text]:focus, input[type=password]:focus {
            outline: none;
        }

    hr {
        border: 1px solid #e3fafc;
        margin-bottom: 2.5rem;
    }

    .registerbtn {
        background-color: #15aabf;
        padding: 1.6rem 2rem;
        margin: 0.8rem 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        .registerbtn:hover {
            background-color: #22b8cf;
        }

    a {
        color: dodgerblue;
    }

    .signin {
        margin-top: 0.6rem;
        text-align: center;
    }

    .nav {
        display: none;
    }
</style>

@model Save__plan_your_trips.Models.ViewModels.SignInRequest

<form method="post">
    <div class="container">
        <p>Please fill in this form to log in.</p>
        <hr>

        <label for="email"><b>Nickname</b></label>
        <input type="text" placeholder="Enter Nickname" id="userName" asp-for="Nickname" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" id="password" asp-for="Password" required>

        <hr>

        <button type="submit" class="registerbtn">Log in</button>
        <div class="signin">
            <p>Have no account? <a asp-area="" asp-controller="Auth" asp-action="SignUp" a>Sign up</a>.</p>
        </div>
    </div>
</form>