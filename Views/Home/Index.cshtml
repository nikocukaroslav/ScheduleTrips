@{
    ViewData["Title"] = "Home Page";
}
<style>
    .homepage {
        background-image: linear-gradient( rgba(36, 42, 46, 0.7), rgba(36, 42, 46, 0.7) ), url("https://th.bing.com/th/id/R.ff248f0499987180ef7f89a72b8708e5?rik=7zGYwp0xNHcl%2fA&pid=ImgRaw&r=0");
        background-size: cover;
        background-position: center center;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        gap: 4rem;
    }

    .button {
        text-decoration: none;
        border-radius: 8px;
        border: 1px solid transparent;
        padding: 0.6em 1.2em;
        font-size: 1em;
        font-weight: 500;
        font-family: inherit;
        background-color: #15aabf;
        color: #242424;
        cursor: pointer;
        transition: all 0.3s
    }

        .button:hover {
            background-color: #22b8cf;
        }

    body {
        overflow: hidden;
    }

    .photo {
        width: 30rem;
        height: 20rem;
        background-color: #333333;
        border-radius: 6px;
        box-shadow:  0 5px 15px 10px rgba(0,0,0, 0.1);
    }

    .photos {
        display: flex;
        gap: 8rem;
        padding: 0 2.4rem;
    }

    h2 {
        text-align: center;
        margin-top:4.2rem;
        letter-spacing: 2.2px;
        font-size: 3.2rem;
        padding: 2.4rem;
        text-shadow: 2px 2px 4px #222;
    }

    .anotherTrip {
    overflow: hidden;
        background-color: #333;
        width: 60rem;
        height: 20rem;
        border-radius:6px;
        box-shadow:  0 5px 15px 10px rgba(0,0,0, 0.1);
        display: flex;
    }
    
    #image{
    width: 40rem;
    height: auto;
    }
    
    .details{
    padding: 1.2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1.2rem;
    }
    
    .noTrips{
    display: flex;
    align-items: center;
    height: 28rem;
    }
</style>

@model IEnumerable<Save__plan_your_trips.Models.Domain.Image?>

<div class="homepage">
    <div>
        @if (Model.Any())
        {
            <h2>Your last trip</h2>
            <div class="photos">
                @foreach (var image in Model.TakeLast(3))
                {
                    <img src="@image?.Url" alt="image" class="photo"/>
                }
            </div>
        }
        else
        {
            <h2 class="noTrips">3 photos of your last trip will be there!</h2>
        }
    </div>
    <div>
        <h2>Maybe try this one</h2>
        <div class="anotherTrip">

            <img alt="image" id="image"
                 src=""/>

            <div class="details">
                <div>
                    <span> Rating:</span>
                    <span>5 stars</span>
                </div>
                <div>
                    <span> Country:</span>
                    <span>Ukraine</span>
                </div>
                <div>
                    <span> City:</span>
                    <span>Zhitomir</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
    var data = 'https://api-ninjas.com';
    var category = 'nature';
    
    fetch('https://api.api-ninjas.com/v1/randomimage?category=' + category, {
        method: 'GET',
        headers: {
            'X-Api-Key': 'JpffhF6QMJNcG/oiCz7pwQ==DKDtvj6nJeAc8btm',
            'Accept': 'image/jpg'
        }
    })
    .then(response => response.blob())
    .then(imageBlob => {
        let imageElement = document.getElementById('image');
        let imageUrl = URL.createObjectURL(imageBlob);
        imageElement.src = imageUrl;
    })
    .catch(error => {
        console.error('Error: ', error);
    });

    </script>
}