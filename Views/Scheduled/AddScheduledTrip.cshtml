<style>
    body {
        overflow: hidden;
    }

    .scheduleTripsPage {
        display: grid;
        grid-template-columns: 1fr 4fr;
        gap: 0.8rem;
    }

    h3 {
        height: 5rem;
        background-color: darkgray;
        color: #242424;
        padding: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        font-weight: 600;
        border-radius: 6px;
        margin-bottom: 0.8rem;
    }

    input {
        border-radius: 6px;
        padding: 1.2rem;
        border: none;
        width: 100%;
    }


    .formContainer {
        width: 100%;
        margin: 0.8rem;
    }

    .mapHeader {
        font-size: 1.8rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        width: auto;
        height: 5rem;
        background-color: #333;
        border-radius: 6px;
        margin-bottom: 1.2rem;
    }

    .map {
        border-radius: 6px;
        width: 100%;
        height: 82vh;
        border: none;
    }

    .mapContainer {
        margin: 0.8rem;
    }

    label {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .todos {
        margin-top: 0.8rem;
        border-radius: 6px;
        background-color: #333;
        min-height: 55vh;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .addTodos {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
    }

    .marginTop {
        margin-top: 1.6rem;
    }

    .submitButton {
        width: 100%;
        height: 5rem;
    }

    .noTodos {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@model Save__plan_your_trips.Models.ViewModels.AddScheduledTripViewModel

<section class="scheduleTripsPage">
    <div class="formContainer">
        <form method="post" asp-action="AddToDo" asp-controller="Scheduled">
            <h3>Add some todos</h3>
            <div class="addTodos">
                <input type="text" asp-for="AddToDoRequest.Task"/>
                <input type="hidden" asp-for="AddToDoRequest.ScheduledTripId" value="@Model.ScheduledTrip?.Id" />
                <button class="add" asp-action="AddToDo" asp-controller="Scheduled">Add</button>
            </div>
        </form>
        <ul class="todos">
            @if (Model.ScheduledTrip.ToDos.Any())
            {
                foreach (var item in Model.ScheduledTrip.ToDos)
                {
                    if (item.Task.Any())
                    {
                        <label>
                            <li>@item.Task</li>
                        </label>
                    }
                    else
                    {
                        <p class="noTodos">No todos yet</p>
                    }
                }
            }
        </ul>
        <form method="post">
            <label>
                <h3 class="marginTop">Planned date</h3>
                <input type="date" id="date" asp-for="AddScheduledTripRequest.DateTime" required/>
            </label>
            <button type="submit" class="submitButton marginTop">
                Schedule
            </button>
        </form>
    </div>
    <section class="mapContainer">
        <header class="mapHeader">Check marshoot to your destination</header>

        <iframe class="map"
                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d40812.351682017834!2d28.6829387!3d50.25884285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1712906141139!5m2!1sru!2sua"
                allowfullscreen loading="lazy" referrerpolicy="no-referrer-when-downgrade">
        </iframe>

    </section>
</section>