<style>
    .formContainer {
        width: 300px;
        height: 80vh;
        display: flex;
        align-items: center;
        margin: 0 auto;
    }

    input {
        border: 2px solid #242424;
        height: 3rem;
        width: 100%;
      
    }

    form {
        width: 100%;
        border-radius: 6px;
        padding: 1.2rem;
        background-color: #333;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    label {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        align-items: center;
    }
</style>

@model Save__plan_your_trips.Models.ViewModels.AddScheduledTripViewModel


<div class="formContainer">
    <form method="post" asp-action="AddScheduledTripName" asp-controller="Scheduled">
        <label>
            <h3>Trip's name</h3>
            <input type="text" id="name" asp-for="AddScheduledTripRequest.Name" required/>
        </label>
        <button type="submit" asp-action="AddScheduledTripName" asp-controller="Scheduled">Create scheduled trip
        </button>
    </form>
</div>