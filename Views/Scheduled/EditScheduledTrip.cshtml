﻿<style>
    body{
        overflow: hidden;
    }

    .scheduleTripsPage{
        display: grid;
        grid-template-columns: 1fr 4fr;
        gap: 0.8rem;
    }

    h3{
        height: 5rem;
        background-color: darkgray;
        color: #242424;
        padding: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        font-weight: 600;
        border-radius: 6px;
        margin-bottom:0.8rem ;
    }

    input{
        border-radius: 6px;
        padding: 1.2rem;
        border: none;
        width: 100%;
    }


    .formContainer{
        width: 100%;
        margin: 0.8rem;
    }

    .mapHeader{
        font-size: 1.8rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        width:auto;
        height: 5rem;
        background-color: #333;
        border-radius: 6px;
        margin-bottom: 1.2rem;
    }

    .map{
        border-radius: 6px;
        width: 100%;
        height: 82vh;
        border:none;
    }

    .mapContainer{
        margin: 0.8rem;
    }

    label{
        display: flex;
        flex-direction:column ;
        gap: 0.4rem;
    }

    .todos{
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .marginTop{
        margin-top: 1.6rem;
    }

    .delete{
        width: 100%;
        border-radius: 6px;
        text-decoration: none;
        background-color: #d90f0f;
        transition: all 0.2s;
        color: inherit;
    }

    .delete:hover{
        background-color: #e03131;
    }

    .buttons {
        height: 5rem;
        display: flex;
        gap: 0.8rem;
    }

    .submit{
        width: 100%;
    }
</style>


@model Save__plan_your_trips.Models.ViewModels.EditScheduledTripRequest

<section class="scheduleTripsPage">
    <form method="post" class="formContainer">
        <label style="display: none;">
            <input type="hidden" id="id" asp-for="@Model.Id" readonly/>
        </label>
        <label>
            <h3>Trip's name</h3>
            <input type="text" id="name" asp-for="Name" required/>
        </label>

        <h3 class="marginTop">Top 5 todos</h3>
        <div class="todos">
        </div>
        <label>
            <h3 class="marginTop">Schedule date</h3>
            <input type="date" id="date" asp-for="DateTime" required/>
        </label>
        <div class="buttons marginTop">

            <button type="submit" class="delete" asp-action="DeleteScheduledTrip" asp-controller="Scheduled">
                Delete
            </button>
            <button type="submit" class="submit" asp-action="EditScheduledTrip" asp-controller="Scheduled">
                Edit
            </button>
        </div>
    </form>
    <section class="mapContainer">
        <header class="mapHeader">Check marshoot to your destination</header>
        <iframe class="map"
                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d40812.351682017834!2d28.6829387!3d50.25884285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1712906141139!5m2!1sru!2sua"
                allowfullscreen loading="lazy" referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </section>
</section>