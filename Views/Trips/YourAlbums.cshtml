<style>
    .tripsPage {
        display: flex;
        overflow: hidden;
    }

    .albumContainer {
        width: 100%;
    }

    .newAlbum {
        position: absolute;
        background-color: darkgray;
        width: 7rem;
        height: 7rem;
        color: #242424;
        right: 3rem;
        bottom: 3rem;
        border-radius: 50%;
        transition: all 0.3s;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .newAlbum:hover {
            background-color: #e3fafc;
        }

    .plus {
        display: flex;
        align-content: center;
        justify-items: center;
    }

    .tripsList {
        padding: 0.8rem;
        display: flex;
        list-style: none;
        flex-direction: column;
        gap: 0.8rem;
    }

    .place {
        width: 20rem;
        height: 5rem;
        background-color: darkgray;
        color: #242424;
        padding: 1.2rem;
        display: flex;
        align-items: center;
        font-size: 1.8rem;
        font-weight: 600;
        border-radius: 6px;
        transition: all 0.2s;
    }

        .place:hover {
            background-color: #e3fafc;
        }

    .active {
        background-color: #e3fafc;
    }

    .header {
        background-color: #333333;
        height: 6rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        font-weight: bold;
        font-size: 1.8rem;
    }

    .container {
        display: flex;
        flex-direction: column;
        gap: 1.6rem;
        margin: 0.8rem;
    }


    .uploadPhotoNew {
        width: 12rem;
        height: 6rem;
        background-color: #242424;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .uploadPhoto {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

    .gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 1.6rem;
    }

    .photo {
        width: 22rem;
        height: 15rem;
        background-color: #333333;
        border-radius: 6px;
    }

    .noTrips {
        width: 22.5rem;
        text-align: center;
    }

</style>

@using Save__plan_your_trips.Models.Domain
@model IEnumerable<Album?>

<section class="tripsPage">
    <ul class="tripsList ">
        @{
            string currentAlbum = "";
        }
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                currentAlbum = item.Name;
                <li class="place">@item.Name</li>
            }
        }
        else
        {
            <p class="noTrips">No trips yet</p>
        }
    </ul>
    <a class="newAlbum" asp-area="" asp-controller="Trips" asp-action="AddAlbum">
        <svg xmlns="http://www.w3.org/2000/svg"
             width="28"
             height="28"
             fill="currentColor"
             class="plus"
             viewBox="0 0 16 16">
            <path fillRule="evenodd"
                  d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
        </svg>
    </a>
    <div class="albumContainer">
        <section class="container">
            <header class="header">

                @if (!string.IsNullOrEmpty(currentAlbum))
                {
                    <p>You in @currentAlbum</p>
                }
                else
                {
                    <p>No album selected</p>
                }

            </header>

            <div class="gallery">
                @foreach (var album in Model)
                {
                    foreach (var image in album.Images)
                    {
                        <img src="@image.Url" alt="іmage" class="photo"/>
                    }
                }

                <span class="uploadPhotoNew photo">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="72"
                         height="72"
                         fill="currentColor"
                         className="bi bi-plus-circle"
                         viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                </span>
                <input type="file" class="uploadPhoto" id="image"/>
            </div>
        </section>
    </div>
</section>